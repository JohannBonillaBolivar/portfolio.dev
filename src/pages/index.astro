---
import Layout from "@/layouts/Layout.astro";

import AboutMe from "@/components/AboutMe.astro";
import Badge from "@/components/Badge.astro";
import BriefCase from "@/icons/BriefCase.astro";
import Code from "@/icons/Code.astro";
import Experience from "@/components/Experience.astro";
import Github from "@/icons/Github.astro";
import LinkedIn from "@/icons/LinkedIn.astro";
import Mail from "@/icons/Mail.astro";
import ProfileCheck from "@/icons/ProfileCheck.astro";
import Projects from "@/components/Projects.astro";
import SectionContainer from "@/components/SectionContainer.astro";
import SocialPill from "@/components/SocialPill.astro";
---

<Layout
	title="Porfolio de Johann Bonilla - Desarrollador y Programador Web con 2 anos de experiencia en el area pero sin experiencia laboral"
	description="Contrata a Johann para crear tu aplicacion web o mobil. Desarrollador Web y Estudiante de Desarrollo de Software."
>
	<main class="px-4">
		<SectionContainer class="py-44 pb-32" id="top">
			<div class="flex gap-x-6 mb-4">
				<img
					class="rounded-full size-20 object-cover"
					src="/img/profile_portfolio.webp"
					alt="Johann Photo"
				/>
				<a
					href="https://www.linkedin.com/in/johann-bonilla-bolivar"
					target="_blank"
					rel="noopener"
					class="flex justify-center items-center hover:scale-105 transition"
				>
					<Badge>Disponible para trabajar</Badge>
				</a>
			</div>
			<h1
				class="dark:text-white font-semibold flex flex-row flex-wrap items-center gap-x-4 pb-4"
			>
				<span class="text-4xl"> Hi! I'm </span>
				<span
					class="font-extrabold text-transparent text-4xl md:text-6xl bg-clip-text bg-gradient-to-r from-purple-700 to-purple-300 dark:from-purple-500 dark:to-purple-100"
					>Johann Bonilla</span
				>
				<!-- <span class="text-2xl"> From Popayan, Colombia </span> -->
			</h1>
			<h2 class="text-lg lg:text-xl text-pretty max-w-[620px]">
				<span
					>+2 a√±os de experiencia en desarrollo de software pero sin
					experiencia laboral.</span
				>
				<span class="text-lime-500 dark:text-lime-300/90">
					Desarrollador Web y Estudiante de Desarrollo de Software.</span
				>
				<span class="text-red-400 dark:text-red-200/90"> De Popayan, Colombia.</span>
				<span class="opacity-75"
					>Con conocimiento en distintas areas de la programacion,
					aunque mas enfocado en el desarrollo web.</span
				>
			</h2>

			<nav class="flex gap-4 mt-8 flex-wrap">
				<SocialPill
					href="https://www.linkedin.com/in/johann-bonilla-bolivar"
				>
					<LinkedIn class="size-4 md:size-5" />
					LinkedIn
				</SocialPill>
				<SocialPill href="https://www.github.com/JohannBonillaBolivar">
					<Github class="size-4 md:size-5" />
					Github
				</SocialPill>
				<SocialPill href="mailto:johannbb0508@gmail.com">
					<Mail class="size-4 md:size-5" />
					johannbb0508@gmail.com
				</SocialPill>
			</nav>
		</SectionContainer>

		<SectionContainer id="experience">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<BriefCase class="size-7" />
				Experiencia laboral
			</h2>
			<Experience />
		</SectionContainer>

		<SectionContainer id="projects">
			<h2 class="text-2xl font-semibold mb-6 flex gap-x-3 items-center">
				<Code class="size-7" />
				Proyectos
			</h2>
			<Projects />
		</SectionContainer>

		<SectionContainer id="sobre-mi">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<ProfileCheck class="size-7" />
				Sobre Mi
			</h2>
			<AboutMe />
		</SectionContainer>
	</main>
</Layout>
