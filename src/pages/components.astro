---
import Badge from "@/components/Badge.astro";
import SectionContainer from "@/components/SectionContainer.astro";
import SocialPill from "@/components/SocialPill.astro";
import LinkedIn from "@/icons/LinkedIn.astro";
import Layout from "@/layouts/Layout.astro";
---

<Layout
    title="Desing System portfolio.dev"
    description="El catalogo de componentes de nuestro portfolio"
>
    <SectionContainer class="py-44 pb-32 flex flex-col gap-y-10">
        <article class="mb-10">
            <h1 class="mb-4 text-xl font-semibold">&lt;Badge&gt;</h1>
            <Badge>Disponible para trabajar</Badge>
        </article>

        <article class="mb-10">
            <h1 class="mb-4 text-xl font-semibold">&lt;SocialPill /&gt;</h1>
            <div class="flex">
                <SocialPill
                    href="https://www.linkedin.com/in/johann-bonilla-bolivar"
                >
                    <LinkedIn class="size-4 md:size-5" />
                    LinkedIn
                </SocialPill>
            </div>
        </article>
    </SectionContainer>
</Layout>
